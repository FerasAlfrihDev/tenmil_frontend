# Hybrid Configuration - Local Frontend + Production Backend via Proxy
VITE_NODE_ENV=development
VITE_API_PROTOCOL=https
VITE_API_DOMAIN=alfrih.com
VITE_API_PATH=/v1/api
VITE_ADMIN_SUBDOMAIN=admin
VITE_ENABLE_SUBDOMAIN_ROUTING=true
VITE_AUTO_DETECT_ENVIRONMENT=false
VITE_API_DEBUG_LOGGING=true
VITE_AUTH_TOKEN_KEY=auth_token
VITE_API_TIMEOUT=10000

# Frontend domain for subdomain detection (different from API domain)
VITE_FRONTEND_DOMAIN=localhost

# Proxy configuration - API calls will go through Vite proxy
VITE_USE_PROXY=true
